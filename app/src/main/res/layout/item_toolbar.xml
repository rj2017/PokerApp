<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/shape_layout">

    <TextView
        android:id="@+id/txt_item_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon"
        android:textSize="20sp"
        style="@style/TextBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/img_about_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exclamation"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_exit"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_toolbar"
        />

    <ImageView
        android:id="@+id/img_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_toolbar"/>


    <EditText
        android:id="@+id/edt_item_toolbar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:maxLines="1"
        android:drawableStart="@drawable/ic_baseline_search"
        style="@style/WhiteEditText"
        android:background="@drawable/shape_edit_text"
        android:paddingLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:hint="@string/search"
       />

</androidx.constraintlayout.widget.ConstraintLayout>