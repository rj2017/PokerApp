<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".view.fragment.StatsFragment">
<!--status-->
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/txt_stats_hp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:textColor="?attr/colorPrimary"
           android:text="HP"
           android:textSize="16sp"/>
       <TextView
           android:id="@+id/value_status_hp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toLeftOf="@+id/power_total_stats_hp"
           android:text="000"
           android:layout_marginEnd="10dp"
           android:textSize="16sp"/>


       <ProgressBar
           android:id="@+id/power_total_stats_hp"
           android:layout_width="250dp"
           android:layout_height="10dp"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="@+id/txt_stats_hp"
           style="@android:style/Widget.ProgressBar.Horizontal"
           android:max="100"
           android:progress="50"
           android:progressDrawable="@drawable/progressbar_layout"
           android:layout_gravity="center_vertical"
           android:orientation="horizontal"/>

   </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_stats_atk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="?attr/colorPrimary"
            android:text="ATK"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/value_status_atk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/power_total_stats_atk"
            android:text="000"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/power_total_stats_atk"
            android:layout_width="250dp"
            android:layout_height="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/txt_stats_atk"
            android:background="@drawable/shape_edit_text"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_stats_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="?attr/colorPrimary"
            android:text="DEF"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/value_status_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/power_total_stats_def"
            android:text="000"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/power_total_stats_def"
            android:layout_width="250dp"
            android:layout_height="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/txt_stats_def"
            android:background="@drawable/shape_edit_text"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_stats_satk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="?attr/colorPrimary"
            android:text="SATK"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/value_status_satk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/power_total_stats_satk"
            android:text="000"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/power_total_stats_satk"
            android:layout_width="250dp"
            android:layout_height="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/txt_stats_satk"
            android:background="@drawable/shape_edit_text"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_stats_sdef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="?attr/colorPrimary"
            android:text="SDEF"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/value_status_sdef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/power_total_stats_sdef"
            android:text="000"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/power_total_stats_sdef"
            android:layout_width="250dp"
            android:layout_height="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/txt_stats_sdef"
            android:background="@drawable/shape_edit_text"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_stats_spd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="?attr/colorPrimary"
            android:text="SPD"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/value_status_spd"
            android:layout_width="wrap_content"
